<div class='panel panel-default admin-user-panel'>
  <div class='panel-body'>
    <%= simple_form_for @user, url: admin_update_user_path do |f| %>
      <div class='form-inputs'>
        <%= f.input :email %>
        <%= f.input :role %>
      </div>
      <div class='form-actions'>
        <%= f.button :submit, t('action.submit'), class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
