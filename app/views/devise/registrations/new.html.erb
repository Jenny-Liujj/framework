<% content_for :center_column do %>
  <div class='vertical-centered-window-block'>
    <div class='vertical-centered'>
      <div class='panel panel-default signup-panel'>
        <div class='panel-heading center'>
          <h4>注册</h4>
        </div>
        <div class='panel-body'>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class='form-inputs'>
              <%= f.input :email, required: true, autofocus: true %>
              <%= f.input :username, required: true %>
              <%= f.input :password, required: true, hint: ("请输入至少#{@minimum_password_length}字符" if @minimum_password_length) %>
              <%= f.input :password_confirmation, required: true %>
            </div>

            <div class='form-actions'>
              <%= f.button :submit, '注册', class: 'btn btn-success btn-block' %>
            </div>
          <% end %>

          <%= render 'devise/shared/links' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
